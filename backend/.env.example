# Configuración del servidor
PORT=3000
HOST=localhost

# Configuración de la base de datos PostgreSQL
DB_USERNAME=tu_usuario
PASSWORD=tu_contraseña
DATABASE=nombre_base_datos

# Seguridad JWT
ACCESS_TOKEN_SECRET=tu_secreto_jwt_super_seguro
cookieKey=tu_cookie_key_super_segura

# ========================================
# CONFIGURACIÓN DE EMAIL (Sistema de Postventa)
# ========================================

# Opción 1: Usar servicio conocido (Gmail, Outlook, etc)
# Descomentar si usas Gmail, Outlook u otro servicio conocido
EMAIL_SERVICE=gmail
EMAIL_USER=tucorreo@gmail.com
EMAIL_PASSWORD=tu_contraseña_de_aplicacion

# Opción 2: Configuración SMTP personalizada
# Descomentar si usas un servidor SMTP personalizado
# EMAIL_HOST=smtp.tuservidor.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=tucorreo@tuservidor.com
# EMAIL_PASSWORD=tu_contraseña

# NOTAS IMPORTANTES:
#
# Para Gmail:
# 1. Habilita la verificación en 2 pasos en tu cuenta de Google
# 2. Genera una "Contraseña de aplicación" en: https://myaccount.google.com/apppasswords
# 3. Usa esa contraseña generada en EMAIL_PASSWORD (NO tu contraseña normal)
# 4. EMAIL_SERVICE=gmail
#
# Para Outlook/Hotmail:
# 1. EMAIL_SERVICE=hotmail
# 2. Usa tu correo y contraseña normal
#
# Para otros servicios SMTP:
# 1. Comenta EMAIL_SERVICE
# 2. Configura EMAIL_HOST, EMAIL_PORT, EMAIL_SECURE
# 3. EMAIL_SECURE=true para puerto 465 (SSL/TLS)
# 4. EMAIL_SECURE=false para puerto 587 (STARTTLS)
